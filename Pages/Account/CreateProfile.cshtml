@page
@model FlaglerBookSwap.Pages.Account.CreateProfileModel
@{
    ViewData["Title"] = "Create Your Profile!";
}

<body class="account-container">
    <div class="text-center">
        <h1 class="display-4 header-font">@ViewData["Title"]</h1>
    </div>
    <div class="account-content">
        <div class="account-box">
            <form asp-page="CreateProfile" method="post" enctype="multipart/form-data">   
                <input type="hidden" asp-for="Email" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="CreateProfileViewModel.selected_major" class="form-label">Major</label>
                    <div class="row" style="max-height: 300px; overflow-y: auto; border: 1px solid #ccc; padding: 10px;">
                        <div>
                            @for (var i = 0; i < Model.CreateProfileViewModel.major.Count(); i++)
                            {
                                <div class="form-check mb-2">
                                    <input type="checkbox" name="CreateProfileViewModel.selected_major" value="@Model.CreateProfileViewModel.major[i].Value" class="form-check-input" />
                                    <label class="form-check-label">@Model.CreateProfileViewModel.major[i].Text</label>
                                </div>
                            }
                        </div>
                    </div>
                    <span asp-validation-for="CreateProfileViewModel.selected_major" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CreateProfileViewModel.expected_grad_year" class="form-label">Graduation Year</label>
                    <select asp-for="CreateProfileViewModel.expected_grad_year" asp-items="Model.GraduationYears" class="form-control"></select>
                </div>
                <div class="mb-3">
                    <label asp-for="CreateProfileViewModel.Phone_number" class="form-label">Phone Number</label>
                    <input asp-for="CreateProfileViewModel.Phone_number" class="form-control" />
                    <span asp-validation-for="CreateProfileViewModel.Phone_number" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CreateProfileViewModel.Password" class="form-label">Password</label>
                    <input asp-for="CreateProfileViewModel.Password" class="form-control" />
                    <span asp-validation-for="CreateProfileViewModel.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CreateProfileViewModel.ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="CreateProfileViewModel.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="CreateProfileViewModel.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CreateProfileViewModel.gender" class="form-label">Gender</label>
                    <input asp-for="CreateProfileViewModel.gender" class="form-control" />
                    <span asp-validation-for="CreateProfileViewModel.gender" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CreateProfileViewModel.profile_picture" class="form-label">Profile Picture</label>
                    <input asp-for="CreateProfileViewModel.profile_picture" type="file" class="form-control" />
                    <span asp-validation-for="CreateProfileViewModel.profile_picture" class="text-danger"></span>
                </div>
                <input type="submit" value="Create Profile" class="btn btn-success w-100 p-2" />
            </form>
        </div>
    </div>
</body>

               

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
