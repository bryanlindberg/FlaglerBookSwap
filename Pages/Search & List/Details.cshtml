@page "/Search & List/Details/{textbookId:int}"
@model DetailsModel
@{
    ViewData["Title"] = "Textbook Details";
}


<form method="post" enctype="multipart/form-data">
    <div class="col-md-6">
        <label>How much do you want to sell this textbook for?</label>
        <input type="text" asp-for="Price" class="form-control" placeholder="" />
    </div>

    <div class="col-md-6">
        <label>What is the edition of this textbook?</label>
        <input type="text" asp-for="textbookEdition" class="form-control" placeholder="" />
    </div>

    <div class="form-group">
        <label>Are you willing to swap your textbook for another textbook?</label>
        <div>
            <label>
                <input type="radio" name="isSwapping" value="true" /> Yes
            </label>
            <label>
                <input type="radio" name="isSwapping" value="false" /> No
            </label>

        </div>

    </div>
    <div class="form-group">
        <label>Would you like to be contacted by phone or email?</label>
        <div>
            <input type="radio" asp-for="contactPref" value="Email" /> Email
            <input type="radio" asp-for="contactPref" value="Phone" /> Phone
            <input type="radio" asp-for="contactPref" value="Either" /> Either
        </div>

    </div>


    <div class="col-md-6">
        <label>What is the condition of this textbook?</label>
        <select asp-for="textbookCondition" class="form-control">
            <option value="Please select an option"></option>
            <option value="Pristine">Pristine</option>
            <option value="Lightly Used">Lightly Used</option>
            <option value="Worn in">Worn in</option>
            <option value="Dreadful">Dreadful</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="textbookImage" class="form-label">Profile Picture</label>
        <input asp-for="textbookImage" type="file" class="form-control" />
        <span asp-validation-for="textbookImage" class="text-danger"></span>
    </div>
    <input type="submit" value="List Textbook" class="btn btn-success w-100 p-2" />
</form>